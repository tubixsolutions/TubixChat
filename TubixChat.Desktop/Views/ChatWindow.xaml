<Window x:Class="TubixChat.Desktop.Views.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TubixChat" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Users and Conversations -->
        <Grid Grid.Column="0" Background="#2C3E50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="#1A252F" Padding="15" Grid.Row="0">
                <StackPanel>
                    <TextBlock Text="{Binding CurrentUserName}" FontSize="18" 
                               Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="TubixChat" FontSize="12" 
                               Foreground="#95A5A6" Margin="0,2,0,0"/>
                </StackPanel>
            </Border>

            <!-- Search Box -->
            <Border Background="#34495E" Padding="10" Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search TextBox -->
                    <Border CornerRadius="6" Background="White" Grid.Column="0">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="35" Padding="10" FontSize="14"
                                 Background="Transparent" BorderThickness="0"/>
                    </Border>

                    <!-- Search Button -->
                    <Button Grid.Column="1" Width="40" Height="35" Margin="5,0,0,0"
                            Command="{Binding SearchUsersCommand}" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#0088cc" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="🔍" Foreground="White" FontSize="16"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Search Results -->
            <ListBox ItemsSource="{Binding SearchResults}" 
                     Background="#2C3E50" BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     Grid.Row="2"
                     Visibility="{Binding SearchResults.Count, Converter={StaticResource CountToVisibilityConverter}}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" Background="#34495E" Cursor="Hand" Margin="0,0,0,5"
                                CornerRadius="6">
                            <!-- Mouse click bound to ViewModel command -->
                            <Border.InputBindings>
                                <MouseBinding MouseAction="LeftClick"
                                              Command="{Binding DataContext.SelectUserCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                              CommandParameter="{Binding}"/>
                            </Border.InputBindings>

                            <StackPanel>
                                <TextBlock Text="{Binding FullName}" FontWeight="Bold" 
                                           Foreground="White" FontSize="14"/>
                                <TextBlock Text="{Binding UserName}" 
                                           Foreground="#BDC3C7" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Conversations List -->
            <ListBox ItemsSource="{Binding Conversations}" 
                     SelectedItem="{Binding SelectedConversation, Mode=TwoWay}"
                     Background="#2C3E50" BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     Grid.Row="2"
                     Visibility="{Binding SearchResults.Count, Converter={StaticResource InverseCountToVisibilityConverter}}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="12" Background="Transparent" 
                                BorderBrush="#34495E" BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding User.FullName}" 
                                               FontWeight="Bold" Foreground="White" FontSize="14"/>
                                    <TextBlock Text="{Binding LastMessage.MessageText}" 
                                               Foreground="#BDC3C7" FontSize="12" 
                                               TextTrimming="CharacterEllipsis" MaxWidth="180"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                    <TextBlock Text="{Binding LastMessage.CreatedAt, StringFormat='{}{0:HH:mm}'}" 
                                               Foreground="#BDC3C7" FontSize="11"/>
                                    <Border Background="#E74C3C" CornerRadius="10" 
                                            Padding="6,2" Margin="0,5,0,0"
                                            Visibility="{Binding UnreadCount, Converter={StaticResource CountToVisibilityConverter}}">
                                        <TextBlock Text="{Binding UnreadCount}" 
                                                   Foreground="White" FontSize="11" FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- Right Panel: Chat Messages -->
        <Grid Grid.Column="1" Background="#ECF0F1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Chat Header -->
            <Border Background="White" Padding="15" Grid.Row="0" 
                    BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
                <StackPanel Visibility="{Binding SelectedUser, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="{Binding SelectedUser.FullName}" 
                               FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedUser.IsOnline, Converter={StaticResource OnlineStatusConverter}}" 
                               FontSize="12" Foreground="#7F8C8D"/>
                </StackPanel>
            </Border>

            <!-- Messages List -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                         Padding="15" x:Name="MessagesScrollViewer">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,5" HorizontalAlignment="{Binding IsMine, Converter={StaticResource MessageAlignmentConverter}}">
                                <Border Background="{Binding IsMine, Converter={StaticResource MessageBackgroundConverter}}" 
                                        CornerRadius="12" Padding="12,8" MaxWidth="400">
                                    <StackPanel>
                                        <TextBlock Text="{Binding MessageText}" 
                                                   TextWrapping="Wrap" Foreground="White" FontSize="14"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:HH:mm}'}" 
                                                       FontSize="11" Foreground="#ECF0F1"/>
                                            <TextBlock Text="  ✓✓" FontSize="11" Foreground="#4A90E2"
                                                       Visibility="{Binding IsRead, Converter={StaticResource BoolToVisibilityConverter}}"
                                                       Margin="5,0,0,0"/>
                                            <TextBlock Text="  ✓" FontSize="11" Foreground="#ECF0F1"
                                                       Visibility="{Binding IsRead, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                                       Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Message Input -->
            <Border Background="White" Padding="15" Grid.Row="2" 
                    BorderBrush="#BDC3C7" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border CornerRadius="6" Background="White" Grid.Column="0">
                        <TextBox Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="40" Padding="12" FontSize="14" 
                                 VerticalContentAlignment="Center"
                                 BorderThickness="0" Background="Transparent" TextWrapping="Wrap"/>
                    </Border>

                    <Button Width="50" Height="40" Margin="10,0,0,0" Grid.Column="1"
                            Command="{Binding SendMessageCommand}" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#0088cc" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="📤" Foreground="White" FontSize="20" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
