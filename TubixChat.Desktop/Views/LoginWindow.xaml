<Window x:Class="TubixChat.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - TubixChat" 
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#17212B">

    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="40">

            <!-- App Title -->
            <TextBlock Text="Tubix Chat" 
                       FontSize="32" FontWeight="Bold"
                       HorizontalAlignment="Center" 
                       Foreground="#0088cc" Margin="0,0,0,30"/>

            <!-- Username -->
            <TextBlock Text="Username" Margin="0,0,0,5" Foreground="#768C9E"/>
            <Border Background="#1F2733" CornerRadius="6" Margin="0,0,0,10">
                <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" 
                         Background="Transparent" 
                         BorderThickness="0" 
                         Foreground="White" 
                         Padding="10" Height="35" FontSize="14"
                         VerticalContentAlignment="Center"/>
            </Border>

            <!-- Password -->
            <TextBlock Text="Password" Margin="0,10,0,5" Foreground="#768C9E"/>
            <Border Background="#1F2733" CornerRadius="6" Margin="0,0,0,10">
                <PasswordBox x:Name="PasswordBox" 
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             Padding="10" Height="35" FontSize="14"
                             VerticalContentAlignment="Center"/>
            </Border>

            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#E74C3C" 
                       Margin="0,0,0,5" 
                       TextWrapping="Wrap" Height="30"/>

            <!-- Login Button -->
            <Button Content="Kirish" 
                    Command="{Binding LoginCommand}" 
                    Height="40" Margin="0,10,0,0" 
                    Background="#0088cc" Foreground="White" FontSize="16" FontWeight="Bold" Cursor="Hand"
                    BorderThickness="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#006699"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005580"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Register Button -->
            <Button Content="Ro'yxatdan o'tish" 
                    Command="{Binding RegisterCommand}" 
                    Height="35" Margin="0,10,0,0" 
                    Background="Transparent" Foreground="#0088cc" BorderBrush="#0088cc" Cursor="Hand"
                    BorderThickness="1">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#006699"/>
                                <Setter Property="BorderBrush" Value="#006699"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </Grid>
</Window>
