<Window x:Class="TubixChat.Desktop.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ro'yxatdan o'tish - TubixChat" 
        Height="800" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#17212B">

    <Grid>
        <Border CornerRadius="12" Background="#1F2733" Margin="20" Padding="30" >
            <StackPanel VerticalAlignment="Center">

                <!-- App Title -->
                <TextBlock Text="Tubix Chat" 
                           FontSize="32" FontWeight="Bold"
                           HorizontalAlignment="Center" 
                           Foreground="#0088cc" Margin="0,0,0,20"/>

                <TextBlock Text="Ro'yxatdan o'tish" 
                           FontSize="24" FontWeight="Bold"
                           HorizontalAlignment="Center" 
                           Foreground="White" Margin="0,0,0,20"/>

                <!-- Username -->
                <TextBlock Text="Username" Margin="0,0,0,5" Foreground="#768C9E"/>
                <Border Background="#2A3544" CornerRadius="6" Margin="0,0,0,10">
                    <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             Foreground="White" 
                             Padding="10" Height="35" FontSize="14"
                             VerticalContentAlignment="Center"/>
                </Border>

                <!-- Full Name -->
                <TextBlock Text="To'liq ism" Margin="0,10,0,5" Foreground="#768C9E"/>
                <Border Background="#2A3544" CornerRadius="6" Margin="0,0,0,10">
                    <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             Foreground="White" 
                             Padding="10" Height="35" FontSize="14"
                             VerticalContentAlignment="Center"/>
                </Border>

                <!-- Phone (optional) -->
                <TextBlock Text="Telefon raqam (ixtiyoriy)" Margin="0,10,0,5" Foreground="#768C9E"/>
                <Border Background="#2A3544" CornerRadius="6" Margin="0,0,0,10">
                    <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             Foreground="White" 
                             Padding="10" Height="35" FontSize="14"
                             VerticalContentAlignment="Center"/>
                </Border>

                <!-- Password -->
                <TextBlock Text="Parol" Margin="0,10,0,5" Foreground="#768C9E"/>
                <Border Background="#2A3544" CornerRadius="6" Margin="0,0,0,10">
                    <PasswordBox x:Name="PasswordBox" 
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 Padding="10" Height="35" FontSize="14"
                                 VerticalContentAlignment="Center"/>
                </Border>

                <!-- Confirm Password -->
                <TextBlock Text="Parolni tasdiqlang" Margin="0,10,0,5" Foreground="#768C9E"/>
                <Border Background="#2A3544" CornerRadius="6" Margin="0,0,0,10">
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                                 PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 Padding="10" Height="35" FontSize="14"
                                 VerticalContentAlignment="Center"/>
                </Border>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#E74C3C" 
                           Margin="0,5,0,5" 
                           TextWrapping="Wrap" Height="30"/>

                <!-- Register Button -->
                <Button Content="Ro'yxatdan o'tish" 
                        Command="{Binding RegisterCommand}" 
                        Height="40" Margin="0,10,0,0" 
                        Background="#0088cc" Foreground="White" FontSize="16" FontWeight="Bold" Cursor="Hand"
                        BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#006699"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#005580"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Back Button -->
                <Button Content="Orqaga" Command="{Binding BackCommand}" 
                        Height="35" Margin="0,10,0,0" 
                        Background="Transparent" BorderBrush="#0088cc" Foreground="#0088cc" Cursor="Hand"
                        BorderThickness="1">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#006699"/>
                                    <Setter Property="BorderBrush" Value="#006699"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>
